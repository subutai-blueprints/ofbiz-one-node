{
  "name": "${environmentName}",
  "description": "Apache OFBiz",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "ofbiz",
      "template": "ofbiz-final@sydyk",
      "peer-criteria": "gr1",
      "size": "${containerSize}",
      "port-mapping": [
        {
          "protocol": "https",
          "domain": "${domain}",
          "internal-port": "18443",
          "external-port": "443",
          "ssl_backend": "true"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "gr1"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/app1/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
       {
        "key": "password",
        "value": "${newOFBizdbUserPassword}"
      }
    ],
    "groups": [
      {
        "name": "servers",
        "hostnames": [
          "ofbiz"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "OFBiz",
      "validation": "[a-zA-Z0-9]+"
    },
    "domain": {	
      "description": "Enter the domain name",	
      "type": "domain",	
      "default": "change.the.domain",	
      "validation": "[a-zA-Z0-9]+"	
    },
   "newOFBizdbUserPassword": {
      "description": "New password for ofbiz db user",
      "type": "string",
      "default": "changeme",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "HUGE",
            "validation": "LARGE,HUGE"
   }
  }
}
